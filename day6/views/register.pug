extends  template

block vars 
    - var title = "Registeration Page"
    - var company = "Intellipaat"

block body
    h1 #{title}
    h2 #{company}'s application
    if errorMessage
        p(class="text-danger") #{errorMessage}
        
    form(method="post")
        div(class="mb-3")
            label(for="firstname" class="form-label") First Name
            input(type="text" name="firstname" required class="form-control" id="firstname" placeholder="Your First Name")
        div(class="mb-3")
            label(for="lastname" class="form-label") Last Name
            input(type="text" name="lastname" required class="form-control" id="lastname" placeholder="Your Last Name")
        div(class="mb-3") 
            label(for="email" class="form-label") Your eMail id
            input(type="email" name="email" required class="form-control" id="email" placeholder="Enter Your eMail-id")
        div(class="mb-3") 
            label(for="password" class="form-label") Password
            input(type="password" name="password" required class="form-control" id="password" )
        div(class="mb-3") 
            input(type="submit" class="btn btn-primary" value="Register")